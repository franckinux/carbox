pkgbase=gbulb
pkgname=('python-gbulb')
pkgver=0.4
pkgrel=1
pkgdesc="GLib event loop for tulip (PEP 3156)"
arch=('any')
license=('Apache')
url="https://pypi.python.org/pypi/$pkgname/"
makedepends=('python' 'python-setuptools')
depends=('python')
options=(!emptydirs)
source=(https://github.com/nathan-hoad/$pkgbase/archive/$pkgver.tar.gz)
md5sums=('513917a9ff60fcbe62884246e7cc4bf1')
sha256sums=('91b60a05da3197e537525224f88ba23d951b9175a6a33d6d4565e492ab591c35')

package() {
  cd $srcdir/$pkgbase-$pkgver
  python setup.py install --root="$pkgdir" --optimize=1
}
